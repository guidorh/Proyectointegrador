          <p onclick="miFuncion()">
          P: ¿Como encuentro mi perro?
          </p>
          <p onclick="miFuncionper()">
            P: ¿Como reporto un perro perdido?
          </p>


    <script>
    function myFunction() {
    var x = document.createElement("P");
    var t = document.createTextNode("Es simple. Hace click en Registrate y segui los pasos.");
    x.appendChild(t);
    document.body.appendChild(x);
    }

    function miFuncion(){
      var x = document.createElement("P");
      var t = document.createTextNode("Luego de registrarte, vas a la pagina principal y vas a ver un mapa con los perros que estan perdidos en tu zona. Siempre que permitas que la aplicacion PetMap acceda a tu ubicación. Tambien es posible acceder desde Encontrados.");
      x.appendChild(t);
      document.body.appendChild(x);
    }

    function miFuncionper(){
      var x = document.createElement("P");
      var t = document.createTextNode("Tenes que clickear en perdidos y seguir el procedimiento. Tendras que especificar: raza, sexo, color, tamaño, entre otras caracteristicas. Gracias por ayudar!");
      x.appendChild(t);
      document.body.appendChild(x);
    }

    </script>

